<!-- 一覧画面 -->

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= book.title %>
			</td>
			<td>
				<%= book.body %>
			</td>
			<td>
				<%= link_to 'Show', book_path(book) %>
				<%= link_to 'Edit', edit_book_path(book) %>
				<%= link_to 'Destroy', book_path(book), method: :delete %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<!-- 投稿画面 -->

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<%= render 'layouts/error_messages', model: f.object %>

	<div class="field">
	  <label for="book_title">Title</label>
	  <%= f.text_field :title %>
	</div>

	<div class="field">
	  <label for="book_body">Body</label>
	  <%= f.text_area :body %>
	</div>

	<div class="field">
	  <%= f.submit 'Create Book' %>
	</div>

<% end %>