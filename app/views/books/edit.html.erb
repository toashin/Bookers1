<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

	<div class="field">
	  <label for="book_title">Title</label>
	  <%= f.text_field :title %>
	</div>

	<div class="field">
	  <label for="book_body">Body</label>
	  <%= f.text_area :body %>
	</div>

	<div class="field">
	  <%= f.submit 'Update Book' %>
	</div>

<% end %>

<div class="field">
  <%= link_to 'show', book_path(@book) %> | <%= link_to 'back', book_path(@book), method: :delete %>
</div>